@model ESFA.DC.LARS.Web.Models.ViewModels.FrameworkSearchResultsViewModel

@using (Html.BeginForm("Search", "FrameworkSearchResult", FormMethod.Post, new { @id = "filterForm", @class = "govuk-form-group" }))
{
    <div class="govuk-grid-row govuk-!-margin-top-6">
        <div class="govuk-grid-column-one-third">
            @await Html.PartialAsync("_SearchFilters", Model)

            <input type="submit" value="Update results" class="govuk-!-margin-top-4 govuk-button govuk-button--secondary" />

            @Html.ActionLink(
            "Clear Filters",
            "ClearFilters",
            new { searchTerm = Model.SearchModel.SearchTerm },
            new { @class = "govuk-!-margin-top-4 govuk-button govuk-button--secondary" })
        </div>

        <div class="govuk-grid-column-two-thirds">
            <ul id="resultList" class="govuk-list">
                <div ref="Results">
                    @await Html.PartialAsync("_SearchResults", Model)
                </div>
            </ul>
        </div>
    </div>
}